<div class="container mt-5">
  <h1 class="display-4 text-center mb-4">Restaurants</h1>

  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: 'h5' %>
        <%= link_to 'View', restaurant_path(restaurant), class: 'btn btn-outline-primary btn-sm' %>
      </li>
    <% end %>
  </ul>

  <div class="mt-4 text-center">
    <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
