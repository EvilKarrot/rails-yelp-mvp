<div class="container">
  <h1 class="display-4 text-center mb-4">New Restaurant</h1>

  <%= simple_form_for @restaurant, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.input :name, label: "Restaurant Name", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :address, label: "Address", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :phone_number, label: "Phone Number", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.input :category, label: "Category", collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select a category", input_html: { class: 'form-control' } %>
    </div>

    <div class="form-group text-center">
      <%= f.button :submit, "Create Restaurant", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
